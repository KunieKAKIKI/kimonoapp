<p>
  <strong>Title:</strong>
  <%= @coordinate.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @coordinate.image %>
</p>

<p>
  <strong>Content:</strong>
  <%= @coordinate.content %>
</p>

<% if @coordinate.user == current_user %>
  <%= link_to 'たんすから選択', choicelist_path(coordinate_id: @coordinate.id), class: 'btn btn-default' %>
<% else %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(coordinate_id: @coordinate.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(coordinate_id: @coordinate.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_coordinate_path(@coordinate) %> |
<%= link_to 'Back', coordinates_path %>
